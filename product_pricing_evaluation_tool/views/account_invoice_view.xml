<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_base_invoice_form" model="ir.ui.view">
        <field name="name">account.base.invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <field name="date_invoice" position="before">
                <field name="invoice_number_eva" string="Invoice Number"/>
            </field>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
                <field name="stock_production_lot_id"
                       string="Serial"
                       groups="sale_advanced_seller.advanced_seller_group"/>
            </xpath>

        </field>
    </record>


    <record id="account_base_invoice_tree" model="ir.ui.view">
        <field name="name">account.base.view.tree</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_tree"/>
        <field name="arch" type="xml">
            <field name="date_invoice" position="before">
                <field name="invoice_number_eva"/>
            </field>
        </field>
    </record>


    <record id="account_base_invoice_supplier_tree" model="ir.ui.view">
        <field name="name">account.base.invoice.supplier.tree</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_tree"/>
        <field name="arch" type="xml">
            <field name="date_invoice" position="after">
                <field name="invoice_number_eva"/>
            </field>
        </field>
    </record>


     <record id="account_base_invoice_supplier_form" model="ir.ui.view">
        <field name="name">account.base.invoice.supplier.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <field name="date_invoice" position="before">
               <field name="invoice_number_eva"/>
            </field>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
                <field name="stock_production_lot_id"
                       string="Serial"
                       groups="sale_advanced_seller.advanced_seller_group"/>
            </xpath>

        </field>
    </record>
</odoo>
